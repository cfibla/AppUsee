  <body>
    <div class="modal-header">
      <div class="modal-title">Altres coordinacions</div>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <div class="row">
          <div class="md-form col-md-5 clear">
            <strong>Alumne/a: </strong><span id="nomAlnAl"></span>
          </div>
          <div class="md-form col-md-3">
            <strong>Curs: </strong><span id="cursAlnAl"></span><br><br>
          </div>
          <div class="md-form col-12"><br>
            <form role="form" method="post" id="altres_coord">

              <!--DATEPICKER-->
              <div class="md-form col-md-3 alturabox" id="altresCoordData">
                <label class="active" for="altresData">Data</label><br>
                <div class="input-group date" data-provide="datepicker">

                <div class="input-group-addon"><i class="fa fa-calendar"></i>
                  </div>
                  <input type="text" class="form-control textcenter" id="altresData" form="altres_coord">
                </div><br><br>
              </div>

              <div class="md-form col-12 alturabox" style="height:100px;">
                <label class="active" for="altresBody">Coordinaci√≥</label><br>
                <textarea class="form-control" style="height:100%;" id="altresBody" form="altres_coord"></textarea>
              </div>
            </form>
          </div></div>
        </div>
      </div>    
      <div class="modal-footer">
          <button type="submit" form="altres_coord" class="btn btn-success btn-block" id="altresBtn">Desa</button>
      </div>
    </body>
  </html>