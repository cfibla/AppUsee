              <small class="text-warning" id="e-warusee" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="nom_user_usee" name="nom" placeholder="Nom">
              <small class="text-warning" id="n-warusee" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="cognom_user_usee" name="cognom" placeholder="Cognom">
