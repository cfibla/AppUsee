<!-- MODAL LOGIN-->

  <div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4>Inici de sessió</h4>
        </div>
        <div class="modal-body" style="padding:40px 50px;">
          <form role="form" method="post" action="/login" id="login-form">
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span> Usuari</label>
              <input type="email" class="form-control required" id="usrname"  name="email" placeholder="Introduiu el vostre correu electrònic">
              <small class="text-warning" id="e-warning" style="display:none";>Entrada obligatòria</small>
            </div>
            <div class="form-group">
              <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Contrasenya</label>
              <input type="password" class="form-control required" id="psw"  name="password" placeholder="Introduiu la vostra contrasenya">
              <small class="text-warning" id="p-warning" style="display:none";>Entrada obligatòria</small>
            </div>
            <p><a href="#">Heu oblidat la vostra contrasenya?</a></p>
            <div class="checkbox">
              <label><input type="checkbox" value="" checked>Recorda'm</label>
            </div>
          </form>

        </div>
        <div class="modal-footer">
          <!--<button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel·la</button>
          <p>Not a member? <a href="#">Sign Up</a></p>-->
          <div class="form-group">
          <button type="submit" class="btn btn-success btn-block" form="login-form"><span class="glyphicon glyphicon-off"></span> Entra</button>
          </div>
        </div>
      </div>
      
    </div>
  </div> 

<!-- MODAL NOVA ESCOLA -->

  <div class="modal fade" id="escolaModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4>Nova escola</h4>
        </div>


        <div class="modal-body" style="padding:40px 50px;">
          <form id="formEscola" role="form" method="post" action="/escola_crear">

            <div class="form-group">
              <label for="nom_escola">Si us plau, empleneu els següents apartats</label>
              <input type="text" class="form-control required" id="nom_escola" name="nom" placeholder="Nom escola">
              <small class="text-warning" id="n-warning" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="text" class="form-control required" id="codi_escola" name="_id" placeholder="Codi escola">
              <small class="text-warning" id="c-warning" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="password" class="form-control required" id="password_escola" name="password" placeholder="Contrasenya">
              <small class="text-warning" id="p-war" style="display:none";>Entrada obligatòria</small>
            </div>
              
            <div class="form-group">
              <input type="text" class="form-control" id="tel_escola" name="telefon" placeholder="Telèfon">
            </div>

            <div class="form-group">
              <input type="email" class="form-control" id="email_escola" name="email" placeholder="Correu electrònic">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="adreca_escola" name="adreca" placeholder="Adreça">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="cp_escola" name="codiPostal" placeholder="Codi postal">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="pob_escola" name="poblacio" placeholder="Població">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="prov_escola" name="provincia" placeholder="Província">
            </div>

          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" form="formEscola" class="btn btn-success btn-block">Envia la informació</button>
        </div>
      </div>
      
    </div>
  </div> 


  <!-- MODAL NOU TUTOR -->

  <div class="modal fade" id="userModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4>Nou tutor</h4>
        </div>

        <div class="modal-body" style="padding:40px 50px;">
          <form id="formUser" role="form" method="post" action="/usuari_crear">
            <div class="form-group">
              <label for="email_user">Empleneu els següents apartats</label><br>
<!--              <div class="" id="newEE_error">errorAlta%></div><br>-->
              <input type="email" class="form-control" id="email_user" name="email" placeholder="Email">
              <small class="text-warning" id="e-wartutor" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="nom_user" name="nom" placeholder="Nom">
              <small class="text-warning" id="n-wartutor" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="cognom_user" name="cognom" placeholder="Cognom">
            </div>

            <div class="form-group">
              <input type="text" class="form-control" id="codi_esc_tutor" name="escola" placeholder="Codi escola">
              <small class="text-warning" id="c-wartutor" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="password" class="form-control" id="password_user" name="password" placeholder="Contrasenya">
              <small class="text-warning" id="p-wartutor" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <label for="curs_act">Curs: </label>
                <select class="form-control" id="curs_act" name="curs">
                  <option value="">Seleccioneu</option>
                  <option value="1r A">1r A</option>
                  <option value="1r B">1r B</option>
                  <option value="2n A">2n A</option>
                  <option value="2n B">2n B</option>
                  <option value="3r A">3r A</option>
                  <option value="3r B">3r B</option>
                  <option value="4t A">4t A</option>
                  <option value="4t B">4t B</option>
                  <option value="5è A">5è A</option>
                  <option value="5è B">5è B</option>
                  <option value="6è A">6è A</option>
                  <option value="6è B">6è B</option>
                </select>
                <small class="text-warning" id="s_curs" style="display:none";>Cal seleccionar un curs</small>
            </div>
            
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" form="formUser" class="btn btn-success btn-block">Envia la informació</button>
        </div>
      </div>
      
    </div>
  </div>


  <!-- MODAL NOU MESTRE USEE-->

  <div class="modal fade" id="useeModal" role="dialog">
