            <div class="form-group">
              <input type="text" class="form-control" id="codi_esc_usee" name="escola" placeholder="Codi escola">
              <small class="text-warning" id="c-warusee" style="display:none";>Entrada obligatòria</small>
            </div>

            <div class="form-group">
              <input type="password" class="form-control" id="password_user_usee" name="password" placeholder="Contrasenya">
              <small class="text-warning" id="p-warusee" style="display:none";>Entrada obligatòria</small>
            </div>
            
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" form="formUsee" class="btn btn-success btn-block">Envia la informació</button>
        </div>
      </div>
      
    </div>
  </div>

