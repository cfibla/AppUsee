<!--DADES ALUMNE-->
    <div class="container">
      <div class="row">
        <form role="form" method="post" action="/alumneNou" id="dadesAlumne">
          <div class="form-group">
            <div class="col-md-2">
              <h4>Nova entrada</h4>
            </div>

            <div class="col-md-10">
              <hr>
            </div>

            <div class="form-group col-md-3">
              <label for="nom_alumne">Nom *</label>
              <input type="text" class="form-control" id="nom_alumne" name="nom"
                     placeholder="Nom" value="<%=alumne.nom||''%>">
            </div>

            <div class="form-group col-md-3">
              <label for="cognom1_alumne">Primer cognom *</label>
              <input type="text" class="form-control" id="cognom1_alumne" name="cognom1"
                     placeholder="Cognom" value="<%=alumne.cognom1||''%>">
            </div>

            <div class="form-group col-md-3">
              <label for="cognom2_alumne">Segon cognom</label>
              <input type="text" class="form-control" id="cognom2_alumne" name="cognom2"
                     placeholder="Cognom">
            </div>

            <div class="form-group col-md-3" style="clear:both;" id="data">
              <label for="data_naixement">Data naixement</label>
              <div class="input-group date alturabox" data-provide="datepicker">
                <input type="text" class="form-control" form="dadesAlumne" id="data_naixement" name="naixement">
                <div class="input-group-addon">
                  <span class="glyphicon glyphicon-th"></span>
                </div>
              </div>
            </div>

            <div class="form-group col-md-2">
              <label for="targeta_SS">Targeta SS</label>
              <input type="text" class="form-control" id="targeta_SS" name="sSocial"
                     placeholder="Seguretat Social">
            </div>


           <div class="form-group col-md-2">
              <label for="codi_escola">Codi escola *</label>
              <input type="text" class="form-control" id="codi_escola" name="codiEscola"
                     placeholder ="<%=session.user.escola%>" value ="<%=session.user.escola%>">
            </div>

            <div class="form-group col-md-2" id="curs">
              <label for="curs_act">Curs actual *</label>
                <select class="form-control" id="curs_act" name="curs">
                  <option value="<%=session.user.curs%>"><%=session.user.curs%></option>
                  <option value="1r A">1r A</option>
                  <option value="1r B">1r B</option>
                  <option value="2n A">2n A</option>
                  <option value="2n B">2n B</option>
                  <option value="3r A">3r A</option>
                  <option value="3r B">3r B</option>
                  <option value="4t A">4t A</option>
                  <option value="4t B">4t B</option>
                  <option value="5è A">5è A</option>
                  <option value="5è B">5è B</option>
                  <option value="6è A">6è A</option>
                  <option value="6è B">6è B</option>
                </select>
            </div>

            <div class="form-group col-md-2 alturaBox" style="clear:both;">
                <label for="EE-USEE"></label><br>
                  <label class="checkbox-inline">
                  <input type="checkbox" value="true" name="eeUsee">Alumne derivat a USEE</label>
            </div>

            <div class="form-group col-md-12 alturaBox" style="clear:both;">
            <small>Els camps marcats amb l'asterisc (*) són obligatoris</small>
            </div>

            <div class="col-md-12" id="newEE_error"><%=errorAlta%></div>
            <div class="form-group col-md-3 col-md-offset-9" style="text-align:right;">
            <a href="/list" class="btn btn-default" role="button">Cancel·la</a>
            <button type="submit" class="btn btn-primary">Desa</button>
            </div>
            
          </div>
        </form>
      </div>
    </div>