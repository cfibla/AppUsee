<div class="container">
  <div class="row">
            

    <% if (Alumnes.length === 0) { %>
        <p><br />
        No hi ha alumnes registrats
        </p>
        <%} else { 

          if(session.user.mestre === "tutor"){ 

          %> 

            <div class="col-md-2">
              <h4>Llista alumnat <%=Alumnes[0].curs%></h4>
                    <h5>Tutor: <%=Alumnes[0].tutor.nom + " " + Alumnes[0].tutor.cognom%></h5>
            </div>

            <div class="col-md-10">
                <hr>
            </div>

          <% } %>

          <% if(session.user.mestre === "ee"){ %>

            <div class="col-md-3">
              <h4>Llista alumnat EE-USEE</h4>
            </div>

            <div class="col-md-9">
                <hr>
            </div>

          <% } %>


    <div class="col-md-12" style="padding-top: 5em">          
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Núm.</th>
            <th>Nom i cognoms</th>
            <th class="verticaltext col-md-4">Document molt important</th>
            <th class="verticaltext col-md-4">Documentacions</th>
            <th class="verticaltext col-md-4">Document 4</th>
            <th class="verticaltext col-md-4">Document 4</th>
            <th class="verticaltext col-md-4">Document 5</th>
            <th class="verticaltext col-md-4">Document 6</th>
            <th class="verticaltext col-md-4">Document 7</th>
            <th class="verticaltext col-md-4">Document 8</th>
            <th class="verticaltext col-md-4">Document 9</th>
            <th class="verticaltext col-md-4">Document 10</th>

          </tr>
        </thead>
        <tbody>
          <% var i;
          for (i=0; i < Alumnes.length; i++) {
            %>
            <tr>
            <td><%=i+1%></td>
            <td><%=Alumnes[i].nomAlumne + " " + Alumnes[i].cognomAlumne1 + " " +Alumnes[i].cognomAlumne2%></td>


            <td><input type="radio" form="documentacio" name="" value ="doc1"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc2"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc3"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc4"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc5"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc6"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc7"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc8"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc9"></td>
            <td><input type="radio" form="documentacio" name="" value ="doc10"></td>
        
            <td>

          <% if(session.user.mestre === "tutor"){ %>
                <a href="/dadesAlumne/<%=Alumnes[i].id%>" class="btn btn-primary btn-xs" role="button">Dades</a>
                <% } %>

          <% if(session.user.mestre === "ee"){ %>
                <a href="/dades_mod_EE/<%=Alumnes[i].id%>" class="btn btn-primary btn-xs" role="button">Atenció i adaptacions</a>
                <a href="/seg_act_EE/<%=Alumnes[i].id%>" class="btn btn-primary btn-xs" role="button">Seguiment</a>
                <a href="/print_EE/<%=Alumnes[i].id%>" class="btn btn-primary btn-xs" role="button" target="_blank">Imprimir</a>
                <% } %>
          <a href="/dades_suprV/<%=Alumnes[i].id%>" class="btn btn-danger btn-xs" role="button">Elimina</a>
          </td>

         <% }; %>
         <% } %>
         </tr>

        </tbody>
      </table>
    </div>
    </div>
    </div>