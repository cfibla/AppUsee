<div class="container intro-back containerxtra">
  <!-- Jumbotron Header -->
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-6">
