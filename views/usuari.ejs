      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteUserModal" href="/javascripts/modals/deleteUser.ejs" data-id="<%=usuari._id%>" data-mestre="<%=mestre%>">Donar-me de baixa</button>
      <button type="submit" form="usuari_dades" class="btn btn-primary">Desa</button>
    </span>
  </div>
</div>

