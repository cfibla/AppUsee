  <%
    var usr = usuari.curs;
    var mestre = usuari.mestre;
    var mst;
    var usuariUpd;

    if (mestre==="ee"){
      mst = "At. diversitat"
      usr = "At. diversitat";
      usuariUpd = "usuari_ee";
    }

    if (mestre==="tutor"){
      mst = "Tutor"
      usuariUpd = "usuari"
    }
  %>  
  
<form role="form" method="post" action="/<%=usuariUpd%>/<%=usuari._id%>?_method=put" id="usuari_dades">
  <div class="container margetop clear col-md-10 offset-md-2">
    <div class="row">
      <div class="md-form col-12">
        <div class="row">

          <div class="md-form col-md-3">
            <label for="nom_usuari">Nom</label>
            <input type="text" class="form-control" id="nom_usuari" name="nom"
                   value="<%=usuari.nom%>">
          </div>

          <div class="md-form col-md-3">
            <label for="cognom_usuari">Primer Cognom</label>
            <input type="text" class="form-control" id="cognom_usuari" name="cognom"
                   value="<%=usuari.cognom%>">
          </div>

          <div class="md-form col-md-3">
            <label for="email_usuari">Correu electrònic</label>
            <input type="text" class="form-control" id="cognom_usuari" name="email"
                   value="<%=usuari.email%>">
          </div>

           <div class="form-group col-md-2">
            <label for="codi_escola">Codi escola *</label>
            <input type="text" class="form-control" id="codi_escola" name="codiEscola" value = "<%=usuari.escola%>" disabled>
          </div>

          <div class="form-group col-md-2" id="curs">
            <label class="active" for="curs_act">Categoria</label>
            <select class="form-control" id="categoria" name="mestre">
              <option value="<%=mestre%>" selected><%=mst%></option>
              <option value="tutor">Tutor</option>
              <option value="ee">At. diversitat</option>
            </select>
          </div>

          <div class="form-group col-md-2" id="usrCurs">
            <label class="active" for="curs_act">Curs actual</label>
            <select class="form-control" id="curs_act" name="curs">
              <option value="<%=usr%>" selected><%=usr%></option>
              <option value="1r A">1r A</option>
              <option value="1r B">1r B</option>
              <option value="2n A">2n A</option>
              <option value="2n B">2n B</option>
              <option value="3r A">3r A</option>
              <option value="3r B">3r B</option>
              <option value="4t A">4t A</option>
              <option value="4t B">4t B</option>
              <option value="5è A">5è A</option>
              <option value="5è B">5è B</option>
              <option value="6è A">6è A</option>
              <option value="6è B">6è B</option>
              <option value="At. diversitat">At. diversitat</option>
            </select>
          </div>

        </div>
      </div>
    </div>
  </div>
</form>

<div class="container">
  <div class="clearfix float-right">
    <% 
    var li = "/list";
    if(session.user.mestre === "ee"){
      li = "/list_EE"}
