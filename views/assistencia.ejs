      <td><input type="radio" name="<%=Alumnes[i].assist[mati.retard]%>"></td>
      <td><input type="radio" name="<%=Alumnes[i].assist[tarda.falta]%>"></td>
      <td><input type="radio" name="<%=Alumnes[i].assist[tarda.retard]%>"></td>
      </form>
      <td>
            <!--/print_EE/<%=Alumnes[i].id%>-->
            <a href="" class="btn btn-primary btn-xs" role="button" target="_blank">Imprimir</a>
      </td>

     <% }; %><% } %>
     </tr>

    </tbody>
  </table>
          <div class="form-group col-md-3 col-md-offset-9" style="text-align:right;">
