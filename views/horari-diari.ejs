<form role="form" method="post" action="/horari-post?_method=put" id="horari_post">
  <div class="container margetop clear" id="horariDiari">

<%
var dia;
for (var i=0; i < horari.dades.length; i++) {
  if (horari.dades[i].dia === 1) {
    var dia = "DILLUNS";
    }
  if (horari.dades[i].dia === 2) {
    var dia = "DIMARTS";
    }
  if (horari.dades[i].dia === 3) {
    var dia = "DIMECRES";
    }
  if (horari.dades[i].dia === 4) {
    var dia = "DIJOUS";
    }
  if (horari.dades[i].dia === 5) {
    var dia = "DIVENDRES";
    }
%>
    <div class="container">
      <div class="row">
        <!-- http://demos.flesler.com/jquery/scrollTo/ -->
<%if (horari.dades[i].dia!=0 && horari.dades[i].dia!=6) {%>
<!-- Hace falta un INDEX en el MODELO para saber de qué día-hora se trata-->
        <div class="col-md-12">
            <div class="diaDiari"><%=dia%> <strong><%=horari.dades[i].data%></strong></div>
              <div class="horesDiari">
                <div class="row" id="txt">
                <span class="col-md-10"><strong>9:00 <%=horari.dades[i].clase1%></strong></span>
                <span class="col-md-2">
                  <a class="link diariLink" href="#" id="edit1"
                  data-dia="<%=horari.dades[i].data%>">
                  <i class="fa fa-pencil prefix"></i></a></span>
                <div class="col-md-12">
                  <textarea id="<%=dia%>h1" class="form-control disabled"></textarea>
                </div>
              </div>
            </div>

            <div class="horesDiari">
              <strong>10:00 <%=horari.dades[i].clase2%></strong>   
            </div>

            <div class="fila2">
              <strong>ESBARJO</strong>
            </div>

            <div class="horesDiari">
              <strong>11:30 <%=horari.dades[i].clase3%></strong>
            </div>

            <div class="horesDiari">
              <strong>12:30 <%=horari.dades[i].clase4%></strong>
            </div>

            <div class="fila2"><strong>DINAR</strong></div>

            <div class="horesBottom">
              <strong>15:00 <%=horari.dades[i].clase5%></strong>
            </div>
        </div>
        <%}%>  
      </div>
    </div>
    <%}%>
  </div>
</form>

<div class="container clear">
  <div class="clearfix float-right">
    <% 
    var li = "/list";
    if(session.user.mestre === "ee"){
      li = "/list_EE"}
    %>

    <span class="col-md-5">
      <a href="<%=li%>" type="button" class="btn btn-blue-grey"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Torna a la llista</span></a>

    <button type="submit" form="horari_post" class="btn btn-primary">Desa</button>
    </span>
  </div>
</div>