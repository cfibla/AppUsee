<body>
  <form role="form" method="post" action="/horari-diari-post?_method=put" id="horari_post">
    <div class="container margetop clear col-md-10 offset-md-2" id="horariDiari">
      <div class="row" id="horariMain">
        <%
          var dia;
          for (var i=0; i < horari.length; i++) {
            if (horari[i].dia === 1) {
              var dia = "DILLUNS";
              }
            if (horari[i].dia === 2) {
              var dia = "DIMARTS";
              }
            if (horari[i].dia === 3) {
              var dia = "DIMECRES";
              }
            if (horari[i].dia === 4) {
              var dia = "DIJOUS";
              }
            if (horari[i].dia === 5) {
              var dia = "DIVENDRES";
              }
          var daata = horari[i].data.replace(/\//g, "");
        %>
          <div class="md-form col-md-6" id="<%='div_' + daata%>" style="margin-top: 20px;">
            <input type="hidden" name="diaData" value=<%=[horari[i].data]%>>
            <div class="diaDiari">
              <%=dia%> <strong><%=horari[i].data%></strong>
            </div>
              <div class="horesDiari">
                <div class="row">
                  <span class="col-md-10 titleHora"><strong>9:00 <%=horari[i].hora_1.area%></strong></span>
                  <div class="col-md-12">
                    <div class="row">

                      <div class="col-md-4 firstline">
                        <label for="<%='temah1_'+ i%>">Tema/UD</label>
                        <input class="col-md-10" type="text" name="tema1" id="<%='tema_'+ i%>" value="<%=[horari[i].hora_1.tema]%>">
                      </div>

                      <div class="col-md-1 firstline2">
                        <label for="<%='sessioh1_'+ i%>">Sessió</label>
                        <input class="col-md-10" type="text" name="sessio1" id="<%='sessio_'+ i%>" value="<%=[horari[i].hora_1.sessio]%>">
                      </div>

                      <div class="w-100"></div>

                      <div class="col-md-6">
                        <span>Objectius</span>
                        <textarea id="<%=dia%>objh1" class="col-md-12 objtext" name="objectius1" placeholder="Objectius"><%=[horari[i].hora_1.objectius]%></textarea>
                      </div>
                      <div class="col-md-6">
                        <span>Continguts</span>
                        <textarea id="<%=dia%>conth1" class="col-md-12 objtext" name="continguts1" placeholder="Continguts"><%=[horari[i].hora_1.continguts]%></textarea>
                      </div>
                    </div>
                    <span>Activitats</span>
                    <textarea id="<%=dia%>acth1" class="col-md-12 horaritext" name="prog1" placeholder="Activitats"><%=[horari[i].hora_1.prog]%></textarea>
                  </div>
                </div>
              </div>

            <div class="horesDiari">
                            <div class="row">
                <span class="col-md-10 titleHora"><strong>10:00 <%=horari[i].hora_2.area%></strong></span>
                <div class="col-md-12">
                  <div class="row">

                    <div class="col-md-4 firstline">
                      <label for="<%='temah2_'+ i%>">Tema/UD</label>
                      <input class="col-md-10" type="text" name="tema2" id="<%='tema_'+ i%>" value="<%=[horari[i].hora_2.tema]%>">
                    </div>

                    <div class="col-md-1 firstline2">
                      <label for="<%='sessioh2_'+ i%>">Sessió</label>
                      <input class="col-md-10" type="text" name="sessio2" id="<%='sessio_'+ i%>" value="<%=[horari[i].hora_2.sessio]%>">
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-6">
                      <span>Objectius</span>
                      <textarea id="<%=dia%>objh2" class="col-md-12 objtext" name="objectius2" placeholder="Objectius"><%=[horari[i].hora_2.objectius]%></textarea>
                    </div>
                    <div class="col-md-6">
                      <span>Continguts</span>
                      <textarea id="<%=dia%>conth2" class="col-md-12 objtext" name="continguts2" placeholder="Continguts"><%=[horari[i].hora_2.continguts]%></textarea>
                    </div>
                  </div>
                  <span>Activitats</span>
                  <textarea id="<%=dia%>acth2" class="col-md-12 horaritext" name="prog2" placeholder="Activitats"><%=[horari[i].hora_2.prog]%></textarea>
                </div>
              </div>
            </div>

            <div class="fila2">
              <strong>ESBARJO</strong>
            </div>

            <div class="horesDiari">
              <div class="row">
                <span class="col-md-10 titleHora"><strong>11:30 <%=horari[i].hora_3.area%></strong></span>
                <div class="col-md-12">
                  <div class="row">

                    <div class="col-md-4 firstline">
                      <label for="<%='temah3_'+ i%>">Tema/UD</label>
